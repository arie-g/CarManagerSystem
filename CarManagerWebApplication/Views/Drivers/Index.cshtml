                        @Html.ActionLink("View Last Rides", "Index", "EndedRides", new { id = item.Id }, null) |
                        @Html.ActionLink("View Permissions", "Permissions", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "delete-link" })*@
                </td>
            </tr>
        }

    </table>

